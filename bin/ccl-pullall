#!/bin/sh

if [ -z "$CCL_HOME" ]; then
    echo "CCL_HOME environment variable is not defined."
    exit
fi
echo "CCL_HOME is [$CCL_HOME"]

echo "AUTOMATE"
cd $CCL_HOME/automate
git pull

echo "DEPLOY"
cd $CCL_HOME/deploy
git pull

echo "CANVAS"
cd $CCL_HOME/canvas
git pull

echo "FLOW"
cd $CCL_HOME/flow
git pull

echo "COMMON"
cd $CCL_HOME/common
git pull

echo "CLIENT"
cd $CCL_HOME/client
git pull

echo "DOCS"
cd $CCL_HOME/cato-docsite
git pull

echo "COMMON"
cd $CCL_HOME/common
git pull

echo "CLIENT"
cd $CCL_HOME/client
git pull

echo "VELOCITY_PACKAGER"
cd $CCL_HOME/velocity_packager
git pull

echo "VELOCITY"
cd $CCL_HOME/velocity
git pull
